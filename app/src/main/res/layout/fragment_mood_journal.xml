<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient"
    tools:context=".fragments.MoodJournalFragment">

    <!-- White rounded card -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="16dp"
        android:layout_margin="20dp"
        android:layout_gravity="center"
        android:background="@drawable/bg_card_white"
        android:elevation="4dp">

        <!-- Header with title and calendar icon -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp">

            <TextView
                android:id="@+id/moodTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mood Journal ðŸ˜Š"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:layout_alignParentStart="true"/>


        </RelativeLayout>

        <!-- Date -->
        <TextView
            android:id="@+id/moodDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Today, October 8, 2025"
            android:textSize="14sp"
            android:textColor="#666"
            android:layout_marginBottom="16dp"/>

        <!-- Emoji Selector -->
        <LinearLayout
            android:id="@+id/emojiContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="10dp" />

        <!-- Add Mood Button -->
        <Button
            android:id="@+id/btnShareSummary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add Current Mood"
            android:layout_marginBottom="16dp"
            android:backgroundTint="#6B2778"
            android:textColor="@android:color/white"
            />

        <!-- RecyclerView -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerMoods"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:paddingTop="8dp"
            android:clipToPadding="false"
            android:paddingBottom="16dp"/>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabAddMood"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_margin="24dp"
            android:contentDescription="Add Mood"
            android:src="@android:drawable/ic_input_add" />
    </LinearLayout>

    <!-- Floating Add Button -->

</FrameLayout>
